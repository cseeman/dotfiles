# ~/.gitconfig
[user]
	name = Christine Seeman
	mail = christine.seeman@sofwarellc.com
	email = christine.seeman@sofwarellc.com
	signingkey = F5BB5808BF773AFD1BFD0DB996A6EDD21120FC7E
[alias]
  st     = status
  d      = diff
  co     = checkout
  can    = commit --amend --no-edit
  cp     = cherry-pick
  dm     = diff --patience master
  b      = branch
  prb    = pull --rebase
  pf     = push --force-with-lease
  pfu    = push --force-with-lease -u origin HEAD
  fo     = fetch origin
  ff     = merge --ff-only
  noff   = merge --no-ff
  nocom  = merge --no-commit
  rip    = rebase --interactive --preserve-merges
  l      = log --graph --oneline
  lb     = log --graph --oneline --branches
  ll     = log --stat
  lll    = log -p
  oops   = reset --hard HEAD~1
  up     = pull --rebase --autostash
  remotes = remote -v
  rhh = reset --hard HEAD
  rh = reset --hard
  stashes = stash list
  unstash = stash pop
  fixup = commit --fixup
  wup = log --pretty=format:'%h %cn %cr %s' --graph --since=10.weeks
  #Typical Spelling snafu
  checkou = checkout
  statsh = stash
  cop = add -N .; git diff --name-only | xargs rubocop
	conflicts = diff --name-only --diff-filter=U
	wt-status = !pwd && git branch --show-current && git status --short
  wlist = !git worktree list --porcelain | grep -A 2 "$(pwd)"
  wclean = "!f() { \
    if [ -z \"$1\" ]; then \
      echo \"Usage: git wclean <worktree-name-or-path>\"; \
      echo \"Example: git wclean my-feature-branch\"; \
      echo \"Example: git wclean /path/to/worktree\"; \
      return 1; \
    fi; \
    echo \"Removing worktree: $1\"; \
    git worktree remove --force \"$1\" && \
    if git show-ref --verify --quiet refs/heads/\"$(basename \"$1\")\"; then \
      echo \"Deleting local branch: $(basename \"$1\")\"; \
      git branch -d \"$(basename \"$1\")\"; \
    fi; \
    echo \"Pruning stale worktree references\"; \
    git worktree prune; \
    echo \"Worktree cleanup complete!\"; \
  }; f"
  ps = push origin HEAD
	recent-pager = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\" | less -FX
	recents = \\!/Users/christine/bin/git-recent-smart
	recent5 = \\!/Users/christine/bin/git-recent5
	recent10 = \\!/Users/christine/bin/git-recent10
	recent = for-each-ref --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\" --count=10 refs/heads/
	reword = commit --amend --only
[column]
        ui = auto
[commit]
	gpgsign = true
	verbose = true
[core]
	editor = nvim
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
[fetch]
        prune = true
        pruneTags = true
        all = true
[help]
	autocorrect = prompt
[init]
	defaultBranch = main
[pull]
	rebase = true
