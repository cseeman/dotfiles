#!/bin/bash

# Simple dev session test
SESSION_NAME="simple-dev-test"
WORK_DIR="/Users/christine/Documents/Repos/dev-scripts"

echo "Creating session: $SESSION_NAME"
echo "Working directory: $WORK_DIR"

# Create session
tmux new-session -d -s "$SESSION_NAME" -c "$WORK_DIR"
echo "Session created"

# List initial panes
tmux list-panes -t "$SESSION_NAME"

# Create splits
tmux split-window -h -c "$WORK_DIR"
echo "After horizontal split:"
tmux list-panes -t "$SESSION_NAME"

tmux select-pane -t 0
tmux split-window -v -c "$WORK_DIR"
echo "After left vertical split:"
tmux list-panes -t "$SESSION_NAME"

tmux select-pane -t 1
tmux split-window -v -c "$WORK_DIR"
echo "After right vertical split:"
tmux list-panes -t "$SESSION_NAME"

echo "Final layout created successfully!"
tmux list-panes -t "$SESSION_NAME"

# Attach
tmux attach-session -t "$SESSION_NAME"